    <!-- Include jsPDF library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script>
        // Function to extract query parameters from the URL
        function getQueryParameter(name) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(name);
        }

        // Update the custom text on page load
        document.addEventListener('DOMContentLoaded', () => {
            const customText = getQueryParameter('text');
            if (customText) {
                document.getElementById('custom-text').textContent = decodeURIComponent(customText);
            }
        });

        // Function to extract query parameters from the URL
function getQueryParameter(name) {
    const urlParams = new URLSearchParams(window.location.search);
    return urlParams.get(name);
}

// Function to populate the table dynamically
function populateTable(data) {
    const tableBody = document.querySelector('#dynamic-table tbody');

    // Clear any existing rows
    tableBody.innerHTML = '';

    // Split the data into rows (each row is separated by '|')
    const rows = data.split('|');

    // Loop through the rows and create table rows
    rows.forEach((row, index) => {
        // Split each row into columns (each column is separated by ',')
        const [itemName, color, quantity] = row.split(',');

        // Create a new table row
        const tr = document.createElement('tr');

        // Add the row number
        const cellIndex = document.createElement('td');
        cellIndex.textContent = index + 1;
        tr.appendChild(cellIndex);

        // Add the item name
        const cellName = document.createElement('td');
        cellName.textContent = itemName || 'N/A';
        tr.appendChild(cellName);

        // Add the color
        const cellColor = document.createElement('td');
        cellColor.textContent = color || 'N/A';
        tr.appendChild(cellColor);

        // Add the quantity
        const cellQuantity = document.createElement('td');
        cellQuantity.textContent = quantity || 'N/A';
        tr.appendChild(cellQuantity);

        // Append the row to the table body
        tableBody.appendChild(tr);
    });
}

// Update the page content on load
document.addEventListener('DOMContentLoaded', () => {
    // Extract the list of items (structured data)
    const dataParam = getQueryParameter('data');
    if (dataParam) {
        // Populate the table with the structured data
        populateTable(dataParam);
    } else {
        // Fallback message if no data is provided
        const tableBody = document.querySelector('#dynamic-table tbody');
        const row = document.createElement('tr');
        const cell = document.createElement('td');
        cell.colSpan = 4; // Span across all columns
        cell.textContent = 'No data to display.';
        row.appendChild(cell);
        tableBody.appendChild(row);
    }
});

// Function to populate the table dynamically
function populateTable(items) {
    const tableBody = document.querySelector('#dynamic-table tbody');

    // Clear any existing rows
    tableBody.innerHTML = '';

    // Loop through the items and create table rows
    items.forEach((item, index) => {
        const row = document.createElement('tr');

        // Add the row number
        const cellIndex = document.createElement('td');
        cellIndex.textContent = index + 1;
        row.appendChild(cellIndex);

        // Add the item name
        const cellName = document.createElement('td');
        cellName.textContent = item;
        row.appendChild(cellName);

        // Append the row to the table body
        tableBody.appendChild(row);
    });
}

// Update the page content on load
document.addEventListener('DOMContentLoaded', () => {
    // Extract custom text (if any)
    const customText = getQueryParameter('text');
    if (customText) {
        document.getElementById('custom-text').textContent = decodeURIComponent(customText);
    }

    // Extract the list of items (comma-separated string)
    const itemsParam = getQueryParameter('items');
    if (itemsParam) {
        // Split the string into an array of items
        const items = itemsParam.split(',');

        // Populate the table with the items
        populateTable(items);
    } else {
        // Fallback message if no items are provided
        const tableBody = document.querySelector('#dynamic-table tbody');
        const row = document.createElement('tr');
        const cell = document.createElement('td');
        cell.colSpan = 2;
        cell.textContent = 'No items to display.';
        row.appendChild(cell);
        tableBody.appendChild(row);
    }
});
        
    </script>
    <!-- Include html2canvas library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
